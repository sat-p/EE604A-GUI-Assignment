CC = g++
FLUID = fluid
AR = ar crv
RM = rm -rf

LIB = \
    -L${top_builddir}/code/tools/src \
    -L${top_builddir}/code/algos/src \
    -lalgos \
    -ltools \
	-lfltk \
	`pkg-config opencv --cflags --libs`
    
FLAGS = -Wall -O3 -std=c++11
MFLAGS = $(FLAGS) -M
CFLAGS = $(FLAGS) -c
LFLAGS = $(FLAGS)

%.dep: %.cxx
	$(CC) $(MFLAGS) $(INCLUDE) $< > $@
    
%.o: %.cxx
	$(CC) $(CFLAGS) $(INCLUDE) $< -o $@